@namespace Microsoft.FluentUI.AspNetCore.Components
@inherits FluentComponentBase

<fluent-dialog id="@Id"
               class="@Class"
               style="@Style"
               @ondialogbeforetoggle="@OnToggleAsync"
               @ondialogtoggle="@OnToggleAsync"
               @attributes="AdditionalAttributes">
    @* Content *@
    @if (Instance is not null)
    {
        <DynamicComponent Type="@Instance.ContentType"
                          Parameters="Instance.Parameters.Data" />
    }
    else
    {
        @ChildContent
    }
</fluent-dialog>

