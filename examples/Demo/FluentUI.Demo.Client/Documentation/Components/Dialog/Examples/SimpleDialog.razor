<FluentDialogBody>

    <TitleTemplate>
        My Title
    </TitleTemplate>

    <ChildContent>
        Hello @Name (@Age)
    </ChildContent>

    <ActionTemplate>
        <FluentButton Appearance="ButtonAppearance.Primary">OK</FluentButton>
        <FluentButton>Cancel</FluentButton>
    </ActionTemplate>

</FluentDialogBody>

@code {
    [CascadingParameter]
    public FluentDialog? Dialog { get; set; }

    [Parameter]
    public string Name { get; set; } = string.Empty;

    [Parameter]
    public int Age { get; set; }
}
