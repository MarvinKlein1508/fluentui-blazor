<FluentDialogBody>

    <TitleTemplate>
        @Dialog?.Parameters.Title
    </TitleTemplate>

    <ChildContent>
        Hello @Name (@Age)
    </ChildContent>

    <ActionTemplate>
        <FluentButton Appearance="ButtonAppearance.Primary">OK</FluentButton>
        <FluentButton>Cancel</FluentButton>
    </ActionTemplate>

</FluentDialogBody>

@code {
    [CascadingParameter]
    public DialogInstance? Dialog { get; set; }

    [Parameter]
    public string Name { get; set; } = string.Empty;

    [Parameter]
    public int Age { get; set; }

    protected override void OnInitialized()
    {
        Console.WriteLine("OnInitialized: " + Dialog?.Parameters.Title);
    }
}
